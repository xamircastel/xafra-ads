<?xml version="1.0" encoding="UTF-8"?>
<configuration debug="true" scan="true">
	<property name="LOGS" value="/usr/local/tomcat/logs" />

	<appender name="Console"
		class="ch.qos.logback.core.ConsoleAppender">
		<layout class="ch.qos.logback.classic.PatternLayout">
			<Pattern>%d{ISO8601} : %-5p-> %logger{10}:%L-> %m%n</Pattern>
		</layout>
	</appender>

	<appender name="RollingFile"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>${LOGS}/xafra-ads.log</file>
		<rollingPolicy
			class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<fileNamePattern>${LOGS}/xafra-ads.%d{yyyy-MM-dd_HH}.log.gz
			</fileNamePattern>
			<maxHistory>60</maxHistory>
		</rollingPolicy>
		<encoder
			class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
			<pattern>%d{ISO8601} : %-5p-> %logger{10}:%L-> %m%n</pattern>
		</encoder>
	</appender>
	<contextName>ads-logger</contextName>
	<jmxConfigurator />

	<!-- <logger name="org.springframework" level="error" /> -->
	<!-- <logger name="com.develop" level="debug" /> -->
	<!-- <logger name="org.apache" level="error" /> -->


	<root level="info">
<!-- 		<appender-ref ref="Console" /> -->
		<appender-ref ref="RollingFile" />
	</root>

</configuration>
	